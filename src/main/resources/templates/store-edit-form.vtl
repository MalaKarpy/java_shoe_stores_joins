<h1>Edit a Store</h1>
<form class="form-inline" action="/stores/$store.getId()/edit" method="post">
    <div class="form-group">
      <label for="new_store_name">Store Name</label>
      <input type="text" class="form-control" id="new_store_name" name="new_store_name" value="$store.getName()">
    </div>

    <button type="submit" class="btn btn-default">Edit</button>
  </form>
